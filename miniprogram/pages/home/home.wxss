/* pages/home/home.wxss */
page{
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: #ddccae;

}
.van-group_margin{
  margin-top:50rpx !important;
  margin-bottom:50rpx !important;
}
.van-image{
  display: block;
  width: 91vw;
  height: 20vh;
  border-radius: 18rpx;
  margin: 0 auto;
  margin-top:40rpx;
  position: relative;
}
#shadow{
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
  color: white;
  box-sizing: border-box;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
#shadow view{
  font-weight: 300;
}
#shadow view:first-child{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.font-weight{
  font-weight: bold;
}
.label-weight{
  font-weight: normal;
}
.cellroot{
  padding-bottom: 0 !important;
  margin-bottom: 0 !important;
}
.visitor_input .van-cell{
  padding-top: 0 !important;
  padding-bottom: 0 !important;
  margin: 0 !important;
}
.visitor_time{
  flex: 3.5 !important;
  /* display: flex !important; */
}
.algin_center{
  display: flex;
  align-items: center;/* 垂直居中 */
  justify-content: center;/* 水平居中 */
}
#bottom{
  display: flex;
  flex-direction: row;
  height: 7vh;
  /* border-top: 1rpx solid cadetblue; */
  /* flex:1; */
}
button{
  margin: 0;
  padding: 0;
}
.btn{
  padding: 0;
  box-sizing: border-box;
  /* border-right: 1rpx solid cadetblue; */
  height: 100%;
  border-radius: 0;
  font-size: 30rpx;
  font-weight: 500;
  flex: 1;
  color: #fff5e9;
  /* color: white; */
  background-color: #b48a50;
}
.btn:first-child{
  color: #928f8a;
  background-color: #fff5e9;
}
.btn:last-child{
  background-color: #cac1b0;
  color: snow;
}

.dialog{
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  flex-direction: column;
  z-index: 10;
}
.dialog #box{
  width: 80vw;
  height: 70vh;
  background-color: seashell;
  border-radius: 20rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 55rpx;
}
.dialog #top{
  margin-bottom: 25rpx;
  font-size: 45rpx;
}
.dialog #content{
  font-size: 35rpx;
  margin-bottom:35rpx;
}
.dialog #box button{
  color: white;
  background-color: #b48a50;
}

#time{
  padding: 0;
  margin: 0;
}
#time{
  background-color: #fff5e9;
  border-radius: 10rpx;
  color: #b3a78f;
  width: 218rpx;
  height: 50rpx;
  margin-left: auto;
  /* margin-right: 15rpx; */
  padding: 5rpx;
  font-size: 40rpx;
}
.showtime{
  display: flex;
  flex-wrap: wrap; 
  text-align: right;
}
.show-box{
  /* flex-basis: calc(50%) !important;  */
  /* 每行三个元素，减去 margin 的宽度 */
  /* flex: 1; */
  border-radius: 10rpx !important;
  margin-left:18rpx !important;
  padding: 5rpx 10rpx !important;
  box-sizing: border-box !important;
  margin-bottom: 20rpx !important;
  background-color: #b48a50 !important;
}

.show-value{
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  font-size: 30rpx !important;
  color:white !important;
  
}
.btn_size{
  min-width: 30rpx !important;
  font-size: 30rpx !important;
  margin-left: 5rpx !important;
  border: none !important;
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  background-color:transparent !important;
  color: #ddccae !important;
}
